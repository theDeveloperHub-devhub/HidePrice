<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="hide_price" resource="sales" engine="innodb" comment="Form_Data">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="comment" comment="Comment"/>
        <column xsi:type="varchar" name="status" comment="Status"/>
        <column xsi:type="varchar" name="email" comment="Email"/>
        <column xsi:type="varchar" name="name" comment="Name"/>
        <column xsi:type="varchar" name="number" comment="Number"/>
        <column xsi:type="varchar" name="product_id" comment="Product ID"/>
        <column xsi:type="varchar" name="price" comment="Price"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
